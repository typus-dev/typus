# =============================================================================
# Typus LITE Environment Template
# =============================================================================
# Copy this file to `.env`, then replace CHANGE_ME placeholders.
# Most runtime configuration now lives in the database; only core values stay here.
# =============================================================================

# Project Paths
COMPOSE_PROJECT_NAME=CHANGE_ME_PROJECT_NAME
PROJECT_PATH=CHANGE_ME_PROJECT_PATH
STORAGE_PATH=/app/storage
UPLOADS_PATH=/app/storage/uploads
NODE_ENV=CHANGE_ME_NODE_ENV

# URLs
APP_DOMAIN=CHANGE_ME_DOMAIN
API_PATH=/api
BACKEND_URL=https://${APP_DOMAIN}
FRONTEND_URL=https://${APP_DOMAIN}

# Security Tokens
INTERNAL_API_TOKEN=CHANGE_ME_INTERNAL_TOKEN
APP_SECRET=CHANGE_ME_APP_SECRET
JWT_SECRET=CHANGE_ME_JWT_SECRET
JWT_EXPIRE=2592000
SESSION_SECRET=CHANGE_ME_SESSION_SECRET
REFRESH_TOKEN_EXPIRE=2592000
CONVERSATION_ENCRYPTION_SALT=CHANGE_ME_CONVERSATION_SALT

# Admin Credentials (set during install, password shown in console)
ADMIN_EMAIL=CHANGE_ME_ADMIN_EMAIL
ADMIN_PASSWORD=CHANGE_ME_ADMIN_PASSWORD

# Database
DB_HOST=CHANGE_ME_DB_HOST
DB_PORT=CHANGE_ME_DB_PORT
DB_PORT_LOCAL=3312
DB_USER=CHANGE_ME_DB_USER
DB_PASSWORD=CHANGE_ME_DB_PASSWORD
DB_NAME=CHANGE_ME_DB_NAME
DB_PROVIDER=CHANGE_ME_DB_PROVIDER
# DATABASE_URL is generated automatically by backend-startup scripts from DB_PROVIDER and connection variables
PRISMA_SCHEMA_PATH=${PROJECT_PATH}/data/prisma/schemas/schema.merged.prisma

# Backend Server
SERVER_PORT=3001
HOST=0.0.0.0

# Frontend Build / Dev Server
VITE_API_URL=${API_PATH}
VITE_HMR_HOST=${APP_DOMAIN}
VITE_HMR_PORT=3001
VITE_HMR_PROTOCOL=wss

# Docker UID/GID
HOST_UID=1000
HOST_GID=1000

# Logging
LOG_MAX_SIZE=20m
LOG_MAX_DAYS=14d
LOG_MAX_BATCH_SIZE_MB=10
