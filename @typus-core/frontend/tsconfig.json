{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@shared/*": ["src/shared/*"],
      "@modules/*": ["src/modules/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@dsx/*": ["src/dsx/*"],
      "@config/*": ["src/config/*"],
      "@root-shared/*": ["../@typus-core/shared/*"],
      "@typus-core/frontend/*": ["@typus-core/frontend/src/*"],
      "@custom/*": ["custom/*"],
      "@dsl-shared/*": ["../shared/dsl/*"],
      "@shared-types/*": ["../shared/types/*"],
      "@shared-constants/*": ["../shared/constants/*"],
      "@shared-helpers/*": ["../shared/helpers/*"],      
    },
    "useDefineForClassFields": true,
    "strict": false,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ES2022", "DOM"],
    "noEmit": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "types": [
      "vite/client",
      "unplugin-vue-router/client",
      "vue"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/auto-imports.d.ts",
    "src/components.d.ts",
    "src/typed-router.d.ts",
    "src/**/*.d.ts", "src/modules/flux-kontext/methods/flux.methods.ts", "src/modules/flux-kontext/components/chat/FluxPromptInput copy_vue", "src/modules/flux-kontext/components/chat/FluxChat copy_vue"]
}
