FROM node:20-alpine

WORKDIR /app

# Install tsx globally for TypeScript execution
RUN npm install -g tsx

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev)
RUN npm install

# Copy source code
COPY . .

# Expose backend port
EXPOSE 3000

# Run with tsx watch for hot reload
CMD ["tsx", "watch", "@typus-core/backend/server.ts"]
