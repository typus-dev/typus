FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies
RUN npm install

# Copy source code
COPY . .

# Set working directory to frontend
WORKDIR /app/@typus-core/frontend

# Expose Vite dev server port
EXPOSE 8080

# Run Vite dev server
CMD ["npm", "run", "dev"]
